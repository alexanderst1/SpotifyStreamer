<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal"
    android:orientation="horizontal"
    tools:context="com.example.android.spotifystreamer.MainActivity">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:layout="@layout/fragment_main"
        android:name="com.example.android.spotifystreamer.MainActivityFragment"
        android:id="@+id/fragment_main"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent" />

    <FrameLayout
        android:id="@+id/toptracks_container"
        tools:layout="@layout/fragment_top_tracks"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4" />

</LinearLayout>